{
    "version": "1.0.0",
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "ES2015", "dom"],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "declaration": true,
        "rootDir": "./src",
        "declarationDir": "./build",
        "outDir": "./build",
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}